  </div>

  <!-- Script -->
  <script is:inline>
    // Efecto de entrada scroll
    const observador = new IntersectionObserver((entradas) => {
      entradas.forEach(entrada => {
        if (entrada.isIntersecting) {
          entrada.target.classList.remove('opacity-0', 'translate-y-10');
        }
      });
    }, { threshold: 0.1 });

    document.querySelectorAll('.scroll-fade').forEach(el => observador.observe(el));

    // Galer√≠a toggle
    const btnMostrar = document.getElementById('mostrar');
    const btnOcultar = document.getElementById('ocultar');
    const contenedor = document.getElementById('imagenes');

    btnMostrar?.addEventListener('click', () => {
      contenedor.classList.remove('hidden');
      btnMostrar.classList.add('hidden');
      btnOcultar.classList.remove('hidden');
      contenedor.scrollIntoView({ behavior: 'smooth' });
    });

    btnOcultar?.addEventListener('click', () => {
      contenedor.classList.add('hidden');
      btnMostrar.classList.remove('hidden');
      btnOcultar.classList.add('hidden');
    });

    // Zoom imagen
    const modal = document.getElementById('zoom-modal');
    const zoomImg = document.getElementById('zoom-img');

    document.querySelectorAll('.ampliable').forEach(img => {
      img.addEventListener('click', () => {
        zoomImg.src = img.src;
        zoomImg.alt = img.alt;
        modal.classList.remove('hidden');
        document.body.classList.add('overflow-hidden');
      });
    });

    zoomImg.addEventListener('click', () => {
      modal.classList.add('hidden');
      zoomImg.src = '';
      document.body.classList.remove('overflow-hidden');
    });

    // Zoom texto
    document.querySelectorAll('.ampliable-texto').forEach(texto => {
      texto.addEventListener('click', () => {
        texto.classList.toggle('scale-125');
        texto.classList.toggle('font-extrabold');
        texto.classList.toggle('text-purple-700');
        texto.classList.toggle('transition');
        texto.classList.toggle('duration-300');
      });
    });
  </script>
